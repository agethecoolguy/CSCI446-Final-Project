block content
	.row.page-header
		.col-xs-12
			h1= pageHeader.title
	.row
		.col-xs-12
			form.form-horizontal(action="", method="post", role="form")
				- if (error == "val")
					.alert.alert-danger(role="alert") All fields are required. Try again.
				.form-group
					label.col-xs-10.col-sm-4.contorl-label(for="creator") Username
					.col-xs-12.col-sm-10
						input#creator.form-control(type="text" placeholder="Username" name="creator")
				.form-group
					label.col-xs-10.col-sm-4.control-label(for="title") Title
					.col-xs-12.col-sm-10
						input#title.form-control(type="text" placeholder="Title of Card" name="title")
				.form-group
					label.col-xs-10.col-sm-4.control-label(for="image") Image
					.col-xs-12.col-sm-10
						------------INSERT IMAGE SUBMISSION HERE-------------
				.form-group
					label.col-xs-10.col-sm-4.control-label(for="description") Description
