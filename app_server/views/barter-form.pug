extends layout

block content
	.row.page-header
		.col-xs-12
			h1= pageHeader.title
	.row
		.col-xs-12
			form.form-horizontal(action="", method="post", role="form")
				- if (error == "val")
					.alert.alert-danger(role="alert") All fields are required. Try again.
				.form-group
					label.col-xs-10.col-sm-4.control-label(for="username") Username
					.col-xs-12.col-sm-10
						input#username.form-control(type="text" placeholder="Username" name="username")
					
				button.btn.btn-default.pull-left Submit Barter